<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View

        android:id="@+id/main_view1"
        android:layout_marginLeft="60dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/hehe"
        />
    <RelativeLayout
        android:id="@+id/main_rlout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@id/main_view1"
        >
        <EditText
            android:id="@+id/main_et1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_1"
            android:layout_marginTop="50dp"
            android:hint="  账号"
            android:textSize="20sp"
            android:maxLines="1"

            />
        <EditText
            android:id="@+id/main_et2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_1"
            android:layout_below="@id/main_et1"
            android:layout_marginTop="20dp"
            android:hint="  密码"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:maxLines="1"

            />
        <Button
            android:id="@+id/main_button1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/main_et2"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="60dp"
            android:text="登录"
            android:background="@drawable/btn_2"
            android:textSize="20sp" />
        <Button
            android:id="@+id/main_button2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/main_button1"
            android:layout_marginTop="35dp"
            android:layout_below="@id/main_et2"
            android:layout_marginLeft="66dp"
            android:text="注册"
            android:textSize="20sp"
            android:background="@drawable/btn_2"
            />


    </RelativeLayout>
</RelativeLayout>